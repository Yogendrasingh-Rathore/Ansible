pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Yogendrasingh-Rathore/Ansible/tree/master/Mysql'

            }
        }
        
        stage('Execute Ansible') {
            steps {
                ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'Ansible', inventory: 'hosts', playbook: 'db_playbook.yml'

            }
        }
        
    }
}
